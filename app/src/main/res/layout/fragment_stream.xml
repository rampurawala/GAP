<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/side_navi_back"
    android:orientation="vertical"
    tools:context=".btmNavFragment.StreamFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#82ffffff"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/cardview_default_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_back" />
                <TextView
                    android:id="@+id/tv_classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="class name"
                    android:textColor="@color/DarkGreen"
                    android:textSize="@dimen/_30sdp" />

                <TextView
                    android:id="@+id/tv_subjectname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:text="Section name"
                    android:textColor="@color/DarkGreen"
                    android:textSize="@dimen/_20sdp" />
            </android.support.v7.widget.CardView>


        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/cardview_default_radius">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/share_class_pic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/avtar" />

            <TextView

                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center_horizontal|center_vertical"
                android:text="share with your class.." />

        </android.support.v7.widget.CardView>

        <!--  <android.support.design.widget.TabLayout
              android:id="@+id/tab"

              android:layout_width="match_parent"
              android:layout_height="30dp">

              <android.support.design.widget.TabItem
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:tabTextAppearance="@style/MineCustomTabText"
                  android:text="Files" />

              <android.support.design.widget.TabItem
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:tabTextAppearance="@style/MineCustomTabText"
                  android:text="Message" />
          </android.support.design.widget.TabLayout>

          <android.support.v4.view.ViewPager
              android:id="@+id/viewpager"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
       -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stream"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
