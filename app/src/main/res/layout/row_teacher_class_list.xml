<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacher_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/class_list_back"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_weight="9"
                    android:id="@+id/class_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="Class Name"
                    android:textColor="#000000"
                    android:textSize="@dimen/_25sdp" />

              <!--  <TextView
                    android:id="@+id/teacher_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|start|center_vertical"
                        android:layout_weight="1"
                    android:background="@drawable/menu_vertical"
                    />-->
                <Button
                    android:id="@+id/teacher_menu"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="end|start|center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/menu_vertical"
                    />
                <!--  <ImageButton
                      android:id="@+id/teacher_menu"
                      android:layout_marginTop="5dp"
                      android:layout_width="wrap_content"
                      android:background="@drawable/menu_vertical"
                      android:layout_height="wrap_content"

                      />-->

            </LinearLayout>

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="no.of students"
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>

 </LinearLayout>
