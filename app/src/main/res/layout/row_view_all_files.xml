<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAllFiles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="2"
            android:src="@drawable/avtar" />

        <TextView
            android:id="@+id/fileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="8"
            android:text="File name"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/VideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10">

        <VideoView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:src="@drawable/avtar" />

        <TextView
            android:id="@+id/VideofileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="8"
            android:text="File name"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10">

        <ImageView
            android:id="@+id/pdfimg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/pdf_img" />

        <TextView
            android:id="@+id/pdffileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="8"
            android:text="File name"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="15">

        <ImageView
            android:id="@+id/linkimg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/link_image" />

        <TextView
            android:id="@+id/linkfileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="8"
            android:text="File name"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/linkOpen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="4"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/file_download"

            android:text="Click here to Open Link"
            android:textColor="#58fff5" />


    </LinearLayout>


</LinearLayout>
